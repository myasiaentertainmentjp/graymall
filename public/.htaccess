# GrayMall SEO対応 .htaccess
# すべてのリクエストをindex.phpにルーティング（静的ファイル除く）

<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # HTTPSへリダイレクト
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # www なしに統一
    RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
    RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

    # 静的ファイルは直接配信
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]

    # 静的ディレクトリは直接配信
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # assets フォルダは直接配信
    RewriteRule ^assets/ - [L]

    # favicon, robots.txt, sitemap.xml, rss は直接配信
    RewriteRule ^favicon\.(ico|svg)$ - [L]
    RewriteRule ^robots\.txt$ - [L]
    RewriteRule ^sitemap\.xml$ sitemap.php [L]
    RewriteRule ^rss$ rss.php [L]
    RewriteRule ^rss\.xml$ rss.php [L]
    RewriteRule ^feed$ rss.php [L]

    # その他すべてのリクエストを index.php にルーティング
    RewriteRule ^(.*)$ index.php [L]
</IfModule>

# キャッシュ設定
<IfModule mod_expires.c>
    ExpiresActive On

    # HTML - キャッシュしない（動的生成のため）
    ExpiresByType text/html "access plus 0 seconds"

    # CSS/JS - 1年（ハッシュ付きファイル名のため）
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"

    # 画像 - 1ヶ月
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 month"

    # フォント - 1年
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
</IfModule>

# Gzip圧縮
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/css
    AddOutputFilterByType DEFLATE application/javascript text/javascript application/json
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# セキュリティヘッダー
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>
